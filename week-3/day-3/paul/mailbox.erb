<html>
<head>
  <style>
    table {
      border-collapse: collapse;
    }
    td, th {
      border: 1px solid black;
      padding: 1em;
    }
  </style>
</head>
<body>
  <h1><%= mailbox.title%></h1>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>From</th>
        <th>Subject</th>
      </tr>
    </thead>
    <tbody>
      <% mailbox.emails.each do |email| %>
      <tr>
        <td><%= email.date %></td>
        <td><%= email.from %></td>
        <td><%= email.subject %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>
